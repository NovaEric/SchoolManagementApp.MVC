@model SchoolManagementApp.MVC.Data.SchoolClass

@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-center mb-3 text-decoration-underline text-primary">Delete Class</h1>

<div>
    <dl class="row">
         <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Lecture)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Lecture.Id)
        </dd>
       
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Course)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Course.Id)
        </dd>
         <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Time)
