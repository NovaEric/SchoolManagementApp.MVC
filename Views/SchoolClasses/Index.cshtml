@model IEnumerable<SchoolManagementApp.MVC.Data.SchoolClass>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center mb-3 text-decoration-underline text-primary">Classes</h1>

<p>
    <a asp-action="Create" class="btn btn-success"> + Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Time)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Course)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Lecture)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Time)
            </td>
            <td>
                @item.Course.Code - @item.Course.CourseName
            </td>
            <td>
                @item.Lecture.FirstName @item.Lecture.LastName
            </td>
            <td>
                <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.Id">Edit</a> 
                <a class="btn btn-secondary" asp-action="Details" asp-route-id="@item.Id">Details</a> 
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                <a class="btn btn-dark" asp-action="ManageEnrollments" asp-route-id="@item.Id">Manage Enrollment</a>
            </td>
        </tr>
}
    </tbody>
</table>
