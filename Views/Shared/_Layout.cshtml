<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SchoolManagementApp.MVC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="//cdn.datatables.net/1.13.2/css/jquery.dataTables.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SchoolManagementApp.MVC.styles.css" asp-append-version="true" />
    <link rel="canonical" href="https://getbootstrap.com/docs/5.1/examples/carousel/">
</head>
<body>
<header>
  <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="#">School Management</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarCollapse">
        <ul class="navbar-nav me-auto mb-2 mb-md-0">
          <li class="nav-item">
            <a class="nav-link" aria-current="Home" asp-action="Index" asp-controller="Home">Home</a>
          </li>
          @if (User.Identity.IsAuthenticated)
          {            
              <li class="nav-item">
                <a class="nav-link" asp-action="Index" asp-controller="Courses">Courses</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" asp-action="Index" asp-controller="Students">Students</a>
              </li>  
              <li class="nav-item">
                <a class="nav-link" asp-action="Index" asp-controller="Lecturers">Lecturers</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" asp-action="Index" asp-controller="SchoolClasses">Classes Management</a>
              </li>    
          }
          <li class="nav-item">
             <a class="nav-link" asp-action="About" asp-controller="Home">About</a>
          </li>    
        </ul>
        @* <form class="d-flex">
          <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
          <button class="btn btn-outline-success" type="submit">Search</button>
        </form> *@
        <partial name="_LoginPartial"/>
      </div>
    </div>
  </nav>
</header>
  <main role="main" class="container mt-5 pb-2">
      @RenderBody()
  </main>

 <!-- FOOTER -->
  <footer class="footer position-absolute bottom-0 w-100">
      <div class="container">
        <p class="text-muted text-center">&copy; 2023 - NovaMettle &middot; <a href="#">Back to top</a></p>
      </div>
    </footer>
   
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <script src="//cdn.datatables.net/1.13.2/js/jquery.dataTables.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>