<ul class="navbar-nav">
    @if (User.Identity.IsAuthenticated)
    {
        <li class="nav-item mx-2">
            <a class="nav-link text-light btn btn-outline-success" asp-controller="Account" asp-action="Profile">@User.Identity.Name</a>
        </li>    
        <li class="nav-item">
            <a class="nav-link text-light btn btn-outline-danger" asp-controller="Account" asp-action="Logout">Logout</a>
        </li>    
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-light btn btn-outline-success" asp-controller="Account" asp-action="Login">Login</a>
        </li>
    }
</ul>